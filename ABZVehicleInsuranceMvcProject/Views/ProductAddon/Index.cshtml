@model IEnumerable<ProductAddon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddonID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddonTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddonDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddonTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddonDescription)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { productID = item.ProductID, addonId = item.AddonID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { productID = item.ProductID, addonId = item.AddonID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { productID = item.ProductID, addonId = item.AddonID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
